@model IEnumerable<WebApplication2.Models.Pizza>

@{
    ViewData["Title"] = "Pizzas";
}

<h1>Pizzas</h1>

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
            Our selection of pizzas
        </h1>
        <h4>Choose one, or try our Pizza Builder! Then order and Done!</h4>
        <h4>No need to give any of your details!</h4>
        <h4>We already know everything!</h4>
    </div>
    <div class="container">
        <div class="makeOwnCard">
            <img src="~/images/Pizzas/Create.png" class="makeOwnImg" />
            <div class="makeYourOwnText">
                <h3 style="text-align:left;">Create your own Pizza</h3>
                <p style="text-align:left;">Make your own pizza with our Pizzamaker!</p>
                <a class="btn btn-primary" style="float: left" asp-area="" asp-controller="Shop" asp-action="MakeCustomPizza">Try now!</a>
            </div>
        </div>
        <div class="pizzaTable">
            @foreach (var pizza in Model)
            {
                var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");
                <div class="pizzaCard">
                    <a asp-action="AddToCart" asp-route-id="@pizza.Id"> <img src="@imagePath" class="cardImage" asp-append-version="true" /></a>
                    <h5>@pizza.FinalPrice $</h5>
                    <br />
                </div>
            }
        </div>
        </div>
    </div>
</div>