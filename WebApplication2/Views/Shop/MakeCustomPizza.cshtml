@model IEnumerable<WebApplication2.Models.Pizza>

@{
    ViewData["Title"] = "Create";
}

<div class="text-center container">
    <h1>Create Your Own Pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" placeholder="Give your pizza a name..." />
        <br />
        <input type="checkbox" placeholder="Tomato Sauce" />Tomato Sauce
        <br />
        <input type="checkbox" placeholder="Cheese" />Cheese
        <br />
        <input type="checkbox" placeholder="Peperoni" />Peperoni
        <br />
        <input type="checkbox" placeholder="Mushroom" />Mushroom
        <br />
        <input type="checkbox" placeholder="Tuna" />Tuna
        <br />
        <input type="checkbox" placeholder="Pineapple" />Pineapple
        <br />
        <input type="checkbox" placeholder="Ham" />Ham
        <br />
        <input type="checkbox" placeholder="Beef" />Beef
        <br />
        
        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
    </form>
</div>