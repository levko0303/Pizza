@model IEnumerable<WebApplication2.Models.Cart>

@{
    ViewData["Title"] = "My cart";
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Pizza.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                
                    @(item.Pizza.FinalPrice * item.Quantity)
            </td>
            <td>
            <form asp-action="Delete">
                <input type="hidden" value="@item.Id" name="item_id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
            </td>
        </tr>
}
        <a class="btn btn-primary mt-1" asp-area="" asp-controller="Carts" asp-action="Buy">Buy</a>
    </tbody>
</table>
