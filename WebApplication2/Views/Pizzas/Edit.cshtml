@model WebApplication2.Models.Pizza

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pizza</h4>
<hr />
<div class="container">
    <div class="pizzaTable">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="pizzaCard">
                <label asp-for="ImageTitle" class="control-label"></label>
                <input asp-for="ImageTitle" class="form-control" />
                <span asp-validation-for="ImageTitle" class="text-danger"></span>
            </div>
            <div class="pizzaCard">
                <label asp-for="PizzaName" class="control-label"></label>
                <input asp-for="PizzaName" class="form-control" />
                <span asp-validation-for="PizzaName" class="text-danger"></span>
            </div>
            <div class="pizzaCard">
                <label asp-for="BasePrice" class="control-label"></label>
                <input asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TomatoSauce" /> @Html.DisplayNameFor(model => model.TomatoSauce)
                </label>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cheese" /> @Html.DisplayNameFor(model => model.Cheese)
                </label>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Peperoni" /> @Html.DisplayNameFor(model => model.Peperoni)
                </label>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Mushroom" /> @Html.DisplayNameFor(model => model.Mushroom)
                </label>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tuna" /> @Html.DisplayNameFor(model => model.Tuna)
                </label>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pineapple" /> @Html.DisplayNameFor(model => model.Pineapple)
                </label>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ham" /> @Html.DisplayNameFor(model => model.Ham)
                </label>
            </div>
            <div class="pizzaCard form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Beef" /> @Html.DisplayNameFor(model => model.Beef)
                </label>
            </div>
            <div class="pizzaCard">
                <label asp-for="FinalPrice" class="control-label"></label>
                <input asp-for="FinalPrice" class="form-control" />
                <span asp-validation-for="FinalPrice" class="text-danger"></span>
            </div>

            <div class="pizzaCard">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
            </div>
            <div class="pizzaCard">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
