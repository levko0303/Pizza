@model WebApplication2.Models.Pizza

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pizza</h4>
<hr />
<div class="container">
    <div class="pizzaTable">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="pizzaCard">
                <label asp-for="ImageTitle" class="control-label">Image Title</label>
                <input asp-for="ImageTitle" class="form-control" />
                <span asp-validation-for="ImageTitle" class="text-danger"></span>
            </div>
            <div class="pizzaCard">
                <label asp-for="PizzaName" class="control-label">Pizza Name</label>
                <input asp-for="PizzaName" class="form-control" />
                <span asp-validation-for="PizzaName" class="text-danger"></span>
            </div>
            <div class="pizzaCard">
                <label asp-for="BasePrice" class="control-label">Base Price</label>
                <input asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TomatoSauce" /> Include Tomato Sauce
                </label>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cheese" /> Include Cheese
                </label>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Peperoni" /> Include Peperoni
                </label>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Mushroom" /> Include Mushroom
                </label>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tuna" /> Include Tuna
                </label>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pineapple" /> Include Pineapple
                </label>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ham" /> Include Ham
                </label>
            </div>
            <div class="pizzaCard">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Beef" /> Include Beef
                </label>
            </div>
            <div class="pizzaCard">
                <label asp-for="FinalPrice" class="control-label">Final Price</label>
                <input asp-for="FinalPrice" class="form-control" />
                <span asp-validation-for="FinalPrice" class="text-danger"></span>
            </div>
            <div class="pizzaCard">
                <label asp-for="Details" class="control-label">Details</label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="pizzaCard">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
